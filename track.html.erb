<html>
<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <meta http-equiv="X-UA-Compatible" content="ie=edge">
  <title>Soulection Radio - Show#<%= @json['number'] %> - <%= Date.parse(@json['date']).strftime('%e %B %Y') if @json['date'] %></title>
  <link rel="stylesheet" href="https://fonts.googleapis.com/icon?family=Material+Icons">
  <link rel="stylesheet" href="https://code.getmdl.io/1.2.1/material.indigo-pink.min.css">
  <style>
  body:before {
    content: '';
    position: fixed;
    top: 0;
    left: 0;
    right: 0;
    bottom: 0;
    background: url(<%= @json['artwork_url'] %>) center / cover;
    -webkit-filter: blur(5px);
-moz-filter: blur(5px);
-o-filter: blur(5px);
-ms-filter: blur(5px);
filter: blur(5px);
opacity: 1;
background-color: white;
z-index:-1;
  }
  .soulection-card{
    width: 500px;
    margin: 40px auto;
  }
  .soulection-title {
    height: 500px;
    background: url(<%= @json['artwork_url'] %>) center / cover;
  }
  .soulection-title-text,
  .soulection-play-button{
    color: white;
    text-shadow: 0 0 10px black;
  }
  .soulection-table {
    width: 100%;
    white-space: normal;
  }
  </style>
</head>
<body>
  <center>
    <p>
      <a href="./index.html" class="soulection-title-text">Back to all Tracklist's</a>
    </p>
  </center>
  <div class="soulection-card mdl-card mdl-shadow--2dp">


    <div class="soulection-title mdl-card__title">
      <h2  class="soulection-title-text mdl-card__title-text">Show #<%= @json['number']%> - <%= Date.parse(@json['date']).strftime('%e %B %Y') if @json['date'] %></h2>
    </div>
    <table class="soulection-table mdl-data-table">
      <tbody>
        <% if @json['tracks'].length == 0 %>
          <div class="mdl-card__supporting-text">Coming Soon</div>
        <% end %>
        <% @json['tracks'].each do |track| %>
        <% @search_params = URI.escape("#{track['artist']} - #{track['title']}") %>
        <% if @previous_session.nil? || track['session'] != @previous_session %>
          <% @previous_session = track['session'] %>
          <tr>
            <td colspan="3" class="mdl-data-table__cell--non-numeric"><strong><%= track['session'] %></strong></td>
          </tr>
        <% end %>
        <tr>
          <td><%= track['number']%></td>
          <td class="mdl-data-table__cell--non-numeric">
            <strong><%= track['title'] %></strong></br>
            <%= track['artist'] %><br>
            <small><%= track['session'] %></small>
          </td>
          <td width="70" style="white-space: nowrap;">
            <a href="https://soundcloud.com/search?q=<%=@search_params%>" target="_blank"><img src="https://simpleicons.org/icons/soundcloud.svg" width=24 height="24" alt="Search SoundCloud"/></a>
            <a href="https://www.youtube.com/results?q=<%=@search_params%>" target="_blank"><img src="https://simpleicons.org/icons/youtube.svg" width=24 height="24" alt="Search YouTube"/></a>
            <a href="http://www.last.fm/search?q=<%=@search_params%>" target="_blank"><img src="https://simpleicons.org/icons/lastfm.svg" width="24" height="24" alt="Search Last.fm"/></a>
          </td>
        </tr>
        <% end %>
      </tbody>
    </table>
    <div class="mdl-card__actions mdl-card--border">
      <a class="mdl-button mdl-button--colored mdl-js-button mdl-js-ripple-effect" href="<%= @json['listen_url'] %>">
        Listen
      </a>
    </div>
    <div class="mdl-card__menu">
      <a class="mdl-button mdl-button--icon" href="<%= @json['listen_url'] %>">
        <i class="soulection-play-button material-icons">play_circle_outline</i>
      </a>
    </div>
  </div>

  <center>
    <p>
      <a href="https://mekyle.com" class="soulection-title-text">Generated by Kyle Welsby</a>
    </p>
  </center>
</body>
</html>
